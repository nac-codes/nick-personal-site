---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav class="container">
		<div class="brand">
			<a href="/" class="brand-link">{SITE_TITLE}</a>
		</div>
		<div class="nav-links">
			<HeaderLink href="/">HOME</HeaderLink>
			<HeaderLink href="/blog">WORK</HeaderLink>
			<HeaderLink href="/about">INFO</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: rgba(0, 0, 0, 0.9);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--gray-800);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: var(--space-lg) var(--space-md);
		height: 80px;
	}

	.brand {
		flex: 1;
	}

	.brand-link {
		font-family: var(--font-mono);
		font-weight: 700;
		font-size: 1.125rem;
		color: var(--white);
		text-decoration: none;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		border: none;
		transition: opacity 0.2s ease;
	}

	.brand-link:hover {
		opacity: 0.7;
		border: none;
	}

	.nav-links {
		display: flex;
		gap: var(--space-xl);
		align-items: center;
	}

	/* Remove body padding-top when header is fixed */
	:global(body) {
		padding-top: 80px;
	}

	@media (max-width: 768px) {
		nav {
			padding: var(--space-md) var(--space-sm);
			height: 60px;
		}

		.nav-links {
			gap: var(--space-md);
		}

		.brand-link {
			font-size: 1rem;
		}

		:global(body) {
			padding-top: 60px;
		}
	}

	@media (max-width: 480px) {
		.nav-links {
			gap: var(--space-sm);
		}
	}
</style>
