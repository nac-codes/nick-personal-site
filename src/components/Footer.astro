const today = new Date();
---

<footer>
	<div class="container">
		<div class="footer-content">
			<div class="copyright">
				<span class="mono">Â© {today.getFullYear()}</span>
			</div>
			<div class="contact">
				<a href="mailto:nick@arkeon.tech" class="mono">CONTACT</a>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		border-top: 1px solid var(--gray-800);
		padding: var(--space-xl) 0;
		margin-top: var(--space-2xl);
	}

	.footer-content {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.copyright {
		color: var(--gray-500);
		font-size: 0.875rem;
	}

	.contact a {
		color: var(--gray-400);
		font-size: 0.875rem;
		text-decoration: none;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		border: none;
		transition: color 0.2s ease;
	}

	.contact a:hover {
		color: var(--white);
		border: none;
	}

	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			gap: var(--space-sm);
			text-align: center;
		}
	}
</style>
