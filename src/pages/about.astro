<style>
	.about-intro {
		padding: var(--space-2xl) 0;
	}

	.about-intro h1 {
		margin-bottom: var(--space-2xl);
		line-height: 0.9;
	}

	.about-grid {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: var(--space-2xl);
		align-items: start;
	}

	.about-content p {
		color: var(--gray-300);
		line-height: 1.7;
		margin-bottom: var(--space-lg);
	}

	.about-details {
		display: flex;
		flex-direction: column;
		gap: var(--space-xl);
	}

	.detail-section h3 {
		font-size: 0.875rem;
		color: var(--gray-400);
		margin-bottom: var(--space-sm);
		letter-spacing: 0.1em;
	}

	.detail-section p {
		color: var(--gray-200);
		margin: 0 0 var(--space-xs) 0;
		font-size: 0.875rem;
		line-height: 1.4;
	}

	.detail-section a {
		color: var(--gray-200);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.detail-section a:hover {
		color: var(--white);
	}

	/* Publications Section */
	.publications {
		padding: var(--space-2xl) 0;
		border-top: 1px solid var(--gray-800);
	}

	.publications h2 {
		font-size: 0.875rem;
		color: var(--gray-400);
		margin-bottom: var(--space-2xl);
		letter-spacing: 0.1em;
	}

	.publications-grid {
		display: grid;
		gap: var(--space-lg);
	}

	.publication-item {
		padding: var(--space-md) 0;
		border-bottom: 1px solid var(--gray-900);
	}

	.publication-item:last-child {
		border-bottom: none;
	}

	.publication-meta {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: var(--space-sm);
		font-size: 0.75rem;
		color: var(--gray-500);
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.publication-venue {
		color: var(--gray-400);
	}

	.publication-item h3 {
		margin: 0 0 var(--space-sm) 0;
		font-size: 1.125rem;
		line-height: 1.4;
	}

	.publication-item h3 a {
		color: var(--white);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	.publication-item h3 a:hover {
		color: var(--gray-300);
	}

	.publication-item p {
		color: var(--gray-400);
		margin: 0 0 var(--space-xs) 0;
		line-height: 1.5;
	}

	.co-authors {
		display: block;
		font-size: 0.75rem;
		color: var(--gray-500);
		font-style: italic;
	}

	@media (max-width: 768px) {
		.about-grid {
			grid-template-columns: 1fr;
			gap: var(--space-xl);
		}

		.about-details {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: var(--space-lg);
		}

		.publication-meta {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--space-xs);
		}
	}

	@media (max-width: 480px) {
		.about-details {
			grid-template-columns: 1fr;
			gap: var(--space-lg);
		}
	}
</style>
